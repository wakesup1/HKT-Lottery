{
  "name": "hkt-lottery",
  "version": "2.0.0",
  "description": "ระบบขายลอตเตอร์รี่ออนไลน์พร้อม AI - Full Stack Application",
  "main": "backend/server.js",
  "scripts": {
    "start": "cd backend && node server.js",
    "dev": "cd backend && nodemon server.js",
    "migrate": "cd backend && node migrate.js",
    "install:backend": "cd backend && npm install",
    "install:all": "npm run install:backend",
    "pm2:start": "cd backend && pm2 start server.js --name lottery-app",
    "pm2:stop": "pm2 stop lottery-app",
    "pm2:restart": "pm2 restart lottery-app",
    "pm2:logs": "pm2 logs lottery-app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wakesup1/HKT-Lottery.git"
  },
  "keywords": [
    "lottery",
    "AI",
    "Gemini",
    "prediction",
    "MongoDB",
    "Express",
    "Node.js"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
